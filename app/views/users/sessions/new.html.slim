= form_with model: @user, url: session_path(resource_name), local: true do |u|
  .container-fluid.app-color-light
    .text-center.text-light.text-monospace.p-4
      h1 ログインページ

    .container.mb-3
      .card.rounded-lg.app-color-sub
        .row
          .col.text-center
            = link_to 'ゲストユーザーでログインする', users_guest_sign_in_path, method: :post, class: 'btn btn-lg shadow-lg text-light text-bold text-monospace m-2 app-color-dark'
          .col.text-center
            = link_to '新規ユーザーを作成する', signup_path, data: {"turbolinks" => false}, class: 'btn btn-lg shadow-lg text-light text-bold text-monospace m-2 app-color-dark'

    - flash.each do |message_type, message|
      .container.alert.alert-danger.text-center
          = flash.now[:alert]
            = message

    .container
      .card.rounded-lg.app-color-sub
        .card-body
          .form-group.m-5
            = u.label :email, class: 'col-form-label-lg text-monospace'
            = u.email_field :email, autofocus: true, autocomplete: 'email', id: 'Email', class: 'form-control border-app-color-dark'
          .form-group.m-5
            = u.label :password, class: 'col-form-label-lg text-monospace'
            = u.password_field :password, autofocus: true, autocomplete: 'new-password', id: 'Password', class: 'form-control border-app-color-dark'
          .container
            .row
              .col
                - if devise_mapping.rememberable?
                  .container.text-center
                    .field
                      = u.label :remember_me, class: 'text-monospace mr-3'
                      = u.check_box :remember_me, class: 'border-app-color-dark', style: "transform:scale(2.0);"
              .col
                .form-group.text-center
                  = u.submit 'ログインする', class: 'btn btn-lg shadow-lg text-light text-bold text-monospace app-color-dark'
